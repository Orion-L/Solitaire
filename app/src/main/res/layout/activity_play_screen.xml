<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="orion.solitaire.PlayScreen"
    android:background="@drawable/background">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="57.8dp"
        android:id="@+id/goalView4"
        android:src="@drawable/empty2"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="57.8dp"
        android:id="@+id/goalView3"
        android:src="@drawable/empty2"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/goalView4"
        android:layout_toStartOf="@+id/goalView4"
        android:layout_marginRight="1dp"
        android:layout_marginEnd="1dp" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="57.8dp"
        android:id="@+id/goalView2"
        android:src="@drawable/empty2"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/goalView3"
        android:layout_toStartOf="@+id/goalView3"
        android:layout_marginRight="1dp"
        android:layout_marginEnd="1dp" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="57.8dp"
        android:id="@+id/goalView1"
        android:src="@drawable/empty2"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/goalView2"
        android:layout_toStartOf="@+id/goalView2"
        android:layout_marginRight="1dp"
        android:layout_marginEnd="1dp" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="57.8dp"
        android:id="@+id/deckView"
        android:src="@drawable/back"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="57.8dp"
        android:id="@+id/boardView1"
        android:src="@drawable/empty2"
        android:layout_below="@+id/deckView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="86dp" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="57.8dp"
        android:id="@+id/boardView2"
        android:src="@drawable/empty2"
        android:layout_alignTop="@+id/boardView1"
        android:layout_toRightOf="@+id/boardView1"
        android:layout_toEndOf="@+id/boardView1" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="57.8dp"
        android:id="@+id/boardView3"
        android:src="@drawable/empty2"
        android:layout_alignTop="@+id/boardView2"
        android:layout_toRightOf="@+id/boardView2"
        android:layout_toEndOf="@+id/boardView2" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="57.8dp"
        android:id="@+id/boardView4"
        android:src="@drawable/empty2"
        android:layout_alignTop="@+id/boardView3"
        android:layout_toRightOf="@+id/boardView3"
        android:layout_toEndOf="@+id/boardView3" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="57.8dp"
        android:id="@+id/boardView5"
        android:src="@drawable/empty2"
        android:layout_alignTop="@+id/boardView4"
        android:layout_toRightOf="@+id/boardView4"
        android:layout_toEndOf="@+id/boardView4" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="57.8dp"
        android:id="@+id/boardView6"
        android:src="@drawable/empty2"
        android:layout_alignTop="@+id/boardView5"
        android:layout_toRightOf="@+id/boardView5"
        android:layout_toEndOf="@+id/boardView5" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="57.8dp"
        android:id="@+id/boardView7"
        android:src="@drawable/empty2"
        android:layout_alignTop="@+id/boardView6"
        android:layout_toRightOf="@+id/boardView6"
        android:layout_toEndOf="@+id/boardView6" />

</RelativeLayout>
